var nr = {
  unique_id: '',
  url: window.location.href,
  PROGRAM: "12290",
  referrer: document.referrer,
  MERCHANT: "209551",
};
var merchantID = nr.MERCHANT;
var programID = nr.PROGRAM;
var uid = '';
var name = "trackmyvisits=";
var ca = document.cookie.split(';');
for (var i = 0; i < ca.length; i++) {
  var c = ca[i];
  while (c.charAt(0) === ' ') {
    c = c.substring(1);
  }
  if (c.indexOf(name) === 0) {
    uid = c.substring(name.length, c.length);
  }
};
if (uid === '') uid = Math.random().toString(16).substr(2, 32);
var expires = (new Date(Date.now() + 30 * 86400 * 1000)).toUTCString();
document.cookie = 'trackmyvisits=' + uid + '; expires=' + expires + 86400 + ';path=/;';
let r = new XMLHttpRequest();
r.open("POST", "https://cdn.trackmyvisits.com/fetch/trackkvisits");
nr.unique_id = uid;
r.setRequestHeader('Content-type', 'application/json');
r.send();